extends ../layouts/layout

block content
	h1.title.is-2= about.title

	.columns

		each item in items

			.column.is-4-tablet.is-12-mobile
				.card
					.card-image
						figure.image.is-4by3
							img(src= item.banner.src, alt= item.banner.alt)

					.card-content
						.media
							.media-left
								figure.image.is-48x48
									img(src= item.img.src, alt= item.img.alt)

							.media-content
								p.title.is-4= item.title
								p.subtitle.is-6= item.subtitle

						.content
							p= item.content
							p= item.date