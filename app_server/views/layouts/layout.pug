doctype html
html(lang="ru-UA", ng-app="ngInMyPlace").has-navbar-fixed-top
  head
    title InMyPlace - #{title}
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    meta(name='author', content='Maryna Hapon')
    meta(name='description', content='InMyPlace - MEAN project')
    link(rel='shortcut icon', href='/images/favicon.ico', type='image/x-icon')
